# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# LLM Provider Configuration
# Choose provider: openai | gemini | claude | deepseek | auto
VITE_MODEL_PROVIDER=deepseek

# OpenAI Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
# Optional: specify model (default: gpt-3.5-turbo)
VITE_OPENAI_MODEL=gpt-3.5-turbo
# For Edge Functions (if using Supabase)
OPENAI_API_KEY=your_openai_api_key

# Gemini AI Configuration
VITE_GEMINI_API_KEY=your_gemini_api_key_here
# Optional: specify model (default: gemini-1.5-flash)
VITE_GEMINI_MODEL=gemini-1.5-flash

# Claude AI Configuration
VITE_CLAUDE_API_KEY=your_claude_api_key_here
# Optional: specify model (default: claude-3-5-sonnet-20241022)
VITE_CLAUDE_MODEL=claude-3-5-sonnet-20241022

# DeepSeek AI Configuration (OpenAI-compatible)
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here
# Optional: specify model (default: deepseek-chat)
VITE_DEEPSEEK_MODEL=deepseek-chat
# For Edge Functions (if using Supabase)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: OpenRouter Configuration (for OpenAI adapter)
# If using OpenRouter, set VITE_OPENAI_API_KEY to your OpenRouter key (starts with sk-or-)
# The adapter will automatically detect and use OpenRouter endpoints

# App Configuration
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=StudyFlow AI
VITE_APP_VERSION=1.0.0

# Security Configuration
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=60
VITE_MAX_FILE_UPLOAD_SIZE=10485760
VITE_ENCRYPTION_PASSWORD=change_this_in_production
VITE_APP_SALT=change_this_in_production

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true

# Feature Flags
VITE_FEATURE_AI_RECOMMENDATIONS=true
VITE_FEATURE_ADVANCED_ANALYTICS=true
VITE_FEATURE_GAMIFICATION=true

# Development Configuration
VITE_DEV_MODE=false
VITE_LOG_LEVEL=error